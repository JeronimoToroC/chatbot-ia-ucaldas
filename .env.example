# ========================================
# CONFIGURACIÓN DE APIs Y SERVICIOS
# ========================================

# OpenAI API Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Pinecone Vector Database Configuration
PINECONE_API_KEY=pcsk_your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=chatbot-ia-ucaldas
PINECONE_HOST=https://chatbot-ia-ucaldas-xxxxx.svc.xxxxx.pinecone.io

# Groq API Configuration (para Llama 3.1)
GROQ_API_KEY=gsk_your-groq-api-key-here

# Google Drive Configuration
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id-here

# ========================================
# CONFIGURACIÓN DE N8N
# ========================================

# N8N Webhook URLs
N8N_WEBHOOK_CONSULTA_RAG=https://semilleroi3.app.n8n.cloud/webhook/consulta-rag
N8N_WEBHOOK_CONSULTA_LLAMA=https://semilleroi3.app.n8n.cloud/webhook/consulta-rag-llama
N8N_WEBHOOK_EVALUACION=https://semilleroi3.app.n8n.cloud/webhook/evaluacion

# ========================================
# CONFIGURACIÓN DE MODELOS
# ========================================

# Primary Model Configuration (GPT-3.5)
PRIMARY_MODEL=gpt-3.5-turbo
PRIMARY_MODEL_TEMPERATURE=0.3
PRIMARY_MODEL_MAX_TOKENS=500

# Secondary Model Configuration (Llama 3.1)
SECONDARY_MODEL=llama-3.1-70b-versatile
SECONDARY_MODEL_TEMPERATURE=0.3
SECONDARY_MODEL_MAX_TOKENS=500

# Embeddings Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# ========================================
# CONFIGURACIÓN RAG
# ========================================

# Chunking Configuration
CHUNK_SIZE=2400
CHUNK_OVERLAP=400

# Retrieval Configuration
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# ========================================
# CONFIGURACIÓN DE EVALUACIÓN
# ========================================

# Evaluation Metrics Thresholds
TARGET_SCORE=0.70
MAX_HALLUCINATION_RATE=0.10
MIN_CITATION_RATE=0.85
TARGET_IFA=0.75

# Gold Questions Configuration
GOLD_QUESTIONS_FILE=data/gold_questions.json
GOLD_QUESTIONS_COUNT=60

# ========================================
# INTEGRACIONES OPCIONALES
# ========================================

# WhatsApp Business API (Opcional)
WHATSAPP_TOKEN=your-whatsapp-token-here
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id-here

# Telegram Bot API (Opcional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# ========================================
# CONFIGURACIÓN DEL FRONTEND
# ========================================

# API Backend URL
VITE_API_BASE_URL=https://semilleroi3.app.n8n.cloud/webhook
VITE_CONSULTA_RAG_ENDPOINT=/consulta-rag

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================

# Logs Configuration
LOG_LEVEL=info
LOG_ANONYMIZE=true
LOG_OUTPUT_DIR=logs/

# ========================================
# CONFIGURACIÓN DE COSTOS
# ========================================

# Cost Tracking (USD)
EMBEDDING_COST_PER_1K_TOKENS=0.00002
GPT35_INPUT_COST_PER_1K=0.0005
GPT35_OUTPUT_COST_PER_1K=0.0015
GROQ_COST_PER_1K=0.00027

# ========================================
# NOTAS DE USO
# ========================================

# 1. Copiar este archivo como .env: cp .env.example .env
# 2. Reemplazar todos los valores "your-*-here" con tus credenciales reales
# 3. NUNCA commitear el archivo .env al repositorio
# 4. El archivo .env está incluido en .gitignore para proteger credenciales
# 5. Todas las API keys deben mantenerse seguras y privadas
