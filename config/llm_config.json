{
  "project": {
    "name": "ChatBot IA Universidad de Caldas",
    "version": "1.0.0",
    "start_date": "2025-10-15",
    "delivery_date": "2025-11-22"
  },
  "llm": {
    "primary_model": "gpt-3.5-turbo",
    "temperature": 0.3,
    "max_tokens": 500,
    "top_p": 1.0,
    "frequency_penalty": 0.0,
    "presence_penalty": 0.0
  },
  "embeddings": {
    "model": "text-embedding-3-small",
    "dimensions": 1536,
    "batch_size": 100
  },
  "pinecone": {
    "index_name": "chatbot-ia-ucaldas",
    "metric": "cosine",
    "dimensions": 1536,
    "cloud": "aws",
    "region": "us-east-1"
  },
  "rag": {
    "chunk_size": 2400,
    "chunk_overlap": 400,
    "top_k": 5,
    "similarity_threshold": 0.7
  },
  "evaluation": {
    "gold_questions_count": 60,
    "target_score": 0.7,
    "max_hallucination_rate": 0.1,
    "min_citation_rate": 0.85,
    "target_ifa": 0.75
  },
  "costs": {
    "embedding_per_1k_tokens": 0.00002,
    "gpt35_turbo_input_per_1k": 0.0005,
    "gpt35_turbo_output_per_1k": 0.0015,
    "estimated_cost_per_query": 0.002
  }
}
